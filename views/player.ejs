<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Playlist</title>
    <link rel="stylesheet" href="/player.css">
</head>
<body>


  <section class="playlist">
    <h1>Playlist</h1>

    <ul class="messages">
      <% for(var h=0; h<playlist.saved.length; h++) {%>

      <% for(var i=0; i<audioFiles.length; i++) {%>
        <% if(playlist.saved[h].equals(audioFiles[i]._id)){%>
        <li class="audio">
          <span><%= audioFiles[i].title %></span>
          
          <audio controls="controls" autobuffer="autobuffer">
              <source src="data:audio/wav;base64,<%=audioFiles[i].audioData.toString('base64')%>" />
          </audio>
          <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
          <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
          <span><i class="fa fa-trash" aria-hidden="true"></i></span>
          
        </li>
      <% } %>
      <% } %>
      <% } %>

        </ul>
      
     <a href="/player/<%=playlist._id%>">Copy this link to share playlist!</a>

      </section>
        <div class="casslogo">
          <img class="animate__animated animate__fadeInRightBig" src="/assets/casslogonoheart.svg" width="450px" height="450px" alt="">
        </div>


</body>
</html>